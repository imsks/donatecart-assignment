{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "target": "ES6",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "src"
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "node_modules", "src/__test__"],
  "files": ["node_modules/typescript/lib/lib.es6.d.ts"]
}
