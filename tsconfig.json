{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "target": "ES6",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "node_modules"],
  "files": ["node_modules/typescript/lib/lib.es6.d.ts"]
}
